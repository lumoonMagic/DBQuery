{
  "app_mode": "DEMO",

  "ui": {
    "default_theme": "light",
    "enable_canvas": true
  },

  "databricks": {
    "enable": false,
    "host": "https://<workspace-url>.cloud.databricks.com",
    "api_token": "",
    "catalog": "main",
    "schema": "default",
    "warehouse_id": ""
  },

  "neo4j": {
    "enable": false,
    "uri": "bolt://localhost:7687",
    "user": "",
    "password": "",
    "database": "neo4j"
  },

  "vector_store": {
    "provider": "chroma",
    "embedding_model": "google-embeddings-gecko-002",
    "persist_directory": "vector_store"
  },

  "demo_mode": {
    "response_speed": "fast",
    "use_sample_graph": true,
    "use_sample_tables": true,
    "use_sample_charts": true,
    "enable_demo_embeddings": true,
    "traceability_simulation": true
  }
}
